{
  "extends": "@wiretap/typescript-config/no-dom-library-config.json",
  "include": ["src", "*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    /** Encore-specific options */
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "noImplicitOverride": false,
    "skipLibCheck": true,
    "paths": {
      "~encore/*": ["./encore.gen/*"]
    }
  }
}
